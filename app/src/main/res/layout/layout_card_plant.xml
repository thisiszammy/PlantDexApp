<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgPlant"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_marginVertical="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginRight="6dp"
            android:layout_marginEnd="6dp"
            />

        <LinearLayout
            android:layout_toEndOf="@id/imgPlant"
            android:layout_toRightOf="@id/imgPlant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/imgPlant"
            android:layout_alignBottom="@id/imgPlant"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="Scientific Name"
                android:textColor="@color/colorBlack"
                android:textStyle="italic"
                android:textSize="18sp"
                android:layout_margin="2dp"
                android:id="@+id/txtScientificName"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Common Name"
                android:textSize="18sp"
                android:layout_margin="2dp"
                android:textColor="@color/colorBlack"
                android:id="@+id/txtCommonName"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Percent Confidence"
                android:textSize="18sp"
                android:layout_margin="2dp"
                android:textColor="@color/colorBlack"
                android:id="@+id/txtPercentConfidence"

                />


        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>